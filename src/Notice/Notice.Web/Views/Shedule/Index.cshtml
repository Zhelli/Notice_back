@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>View Shedule</title>
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <header>
        <div class="div_header">
            <a asp-controller="User" asp-action="Index"><img src="~/logo1.png" class="image"></a>
            <div class="right_pos">
                <a asp-controller="User" asp-action="Index" class="div_link">Users</a>
                <a asp-controller="Class" asp-action="Index" class="div_link">Classes</a>
                <a asp-controller="Shedule" asp-action="Index" class="div_link">Shedule</a>
                <a asp-controller="Event" asp-action="Index" class="div_link">Event</a>
            </div>
        </div>
    </header>
    <hr>
    <main>
        <div class="flex">
            <div class="left">
                <button class="btn"><a class="link" asp-controller="Shedule" asp-action="AddShedule">Add Schedule</a></button>
                <h3 class="filter"><i>Filtering</i></h3>
                <button class="btn" onclick="ShowClass()">Class</button>
                <div class="hide" id="hidetwo">
                    <div class="check">
                        <input type="checkbox" id="1">
                        <label for="1">1</label>
                        <div class="check1">
                            <input type="checkbox" id="1A">
                            <label for="1A">1А</label>
                        </div>
                        <div class="check1">
                            <input type="checkbox" id="1Б">
                            <label for="1Б">1Б</label>
                        </div>
                    </div>
                    <div class="check">
                        <input type="checkbox" id="2">
                        <label for="2">2</label>
                        <div class="check1">
                            <input type="checkbox" id="2A">
                            <label for="2A">2А</label>
                        </div>
                        <div class="check1">
                            <input type="checkbox" id="2Б">
                            <label for="2Б">2Б</label>
                        </div>
                        <div class="check1">
                            <input type="checkbox" id="2B">
                            <label for="2B">2B</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="right">
                <div class="sear">
                    <div class="search">
                        <label for="find">Find</label>
                        <input type="text" id="find">
                    </div>
                </div>
                <div class="classes">
                    <div>
                        <div class="class">
                            <div class="user-text left_user">
                                <h2>1-A</h2>
                            </div>
                        </div>
                        <div class="shedule_day">
                            <h3 class="up"><i>Monday</i></h3>
                            <table>
                                <tr>
                                    <th>#</th>
                                    <th>Subject</th>
                                    <th>Classroom</th>
                                    <th>Teacher</th>
                                </tr>
                                <tr>
                                    <th>1</th>
                                    <th>Lesson1</th>
                                    <th>Classroom1</th>
                                    <th>Teacher1</th>
                                </tr>
                                <tr>
                                    <th>1</th>
                                    <th>Lesson1</th>
                                    <th>Classroom1</th>
                                    <th>Teacher1</th>
                                </tr>
                                <tr>
                                    <th>1</th>
                                    <th>Lesson1</th>
                                    <th>Classroom1</th>
                                    <th>Teacher1</th>
                                </tr>
                            </table>
                        </div>
                        <br>
                        <div class="shedule_day">
                            <h3 class="up"><i>Tuesday</i></h3>
                            <table>
                                <tr>
                                    <th>#</th>
                                    <th>Subject</th>
                                    <th>Classroom</th>
                                    <th>Teacher</th>
                                </tr>
                                <tr>
                                    <th>1</th>
                                    <th>Lesson1</th>
                                    <th>Classroom1</th>
                                    <th>Teacher1</th>
                                </tr>
                                <tr>
                                    <th>1</th>
                                    <th>Lesson1</th>
                                    <th>Classroom1</th>
                                    <th>Teacher1</th>
                                </tr>
                                <tr>
                                    <th>1</th>
                                    <th>Lesson1</th>
                                    <th>Classroom1</th>
                                    <th>Teacher1</th>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>