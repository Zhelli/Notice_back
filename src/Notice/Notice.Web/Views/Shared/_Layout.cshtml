<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Notice</title>
    @RenderSection("Head")

    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />*@
    <link rel="stylesheet" href="~/css/header.css" />

</head>
<body>
    <header>
        <div class="div_header">
            <a asp-controller="Home" asp-action="Index"><img src="~/logo1.png" class="image"></a>
            <div class="right_pos">
                <div class="dropdown">
                    <button class="dropbtn"><img src="~/bell.png" class="bell"></button>
                    <div class="dropdown-content">
                        <a href="#">Notification 1</a>
                        <a href="#">Notification 2</a>
                        <a href="#">Notification 3</a>
                    </div>
                </div>
                <a asp-controller="User" asp-action="Index" class="div_link">Users</a>
                <a asp-controller="Class" asp-action="Index" class="div_link">Classes</a>
                <a asp-controller="Schedule" asp-action="Index" class="div_link">Schedule</a>
                <a asp-controller="Event" asp-action="Index" class="div_link">Event</a>
                <a asp-controller="User" asp-action="ProfileUser" class="div_link">Cabinet</a>
            </div>
        </div>
    </header>
    <br>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
   
    @RenderSection("Scripts", required: false)
</body>
</html>