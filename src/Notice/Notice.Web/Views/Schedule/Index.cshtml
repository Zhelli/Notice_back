@using Notice.Web.ViewModels
@model ScheduleViewModel
@{
    ViewData["Title"] = "View schedule";
}

@section Head {
    <link rel="stylesheet" href="~/css/style.css">
}

<div class="flex">
    <div class="left">
        <button class="btn"><a class="link" asp-controller="Schedule" asp-action="AddSchedule">Add Schedule</a></button>
        <h3 class="filter"><i>Filtering</i></h3>
        <button class="btn" onclick="ShowClass()">Class</button>
        <div class="hide" id="hidetwo">
            <div class="check">
                <input type="checkbox" id="1">
                <label for="1">1</label>
                <div class="check1">
                    <input type="checkbox" id="1A">
                    <label for="1A">1А</label>
                </div>
                <div class="check1">
                    <input type="checkbox" id="1Б">
                    <label for="1Б">1Б</label>
                </div>
            </div>
            <div class="check">
                <input type="checkbox" id="2">
                <label for="2">2</label>
                <div class="check1">
                    <input type="checkbox" id="2A">
                    <label for="2A">2А</label>
                </div>
                <div class="check1">
                    <input type="checkbox" id="2Б">
                    <label for="2Б">2Б</label>
                </div>
                <div class="check1">
                    <input type="checkbox" id="2B">
                    <label for="2B">2B</label>
                </div>
            </div>
            <div class="check">
                <input type="checkbox" id="3">
                <label for="3">2</label>
                <div class="check1">
                    <input type="checkbox" id="3A">
                    <label for="3A">3А</label>
                </div>
                <div class="check1">
                    <input type="checkbox" id="3Б">
                    <label for="3Б">3Б</label>
                </div>
                <div class="check1">
                    <input type="checkbox" id="3B">
                    <label for="3B">3B</label>
                </div>
            </div>
        </div>
    </div>
    <div class="right">
        <div class="sear">
            <div class="search">
                <label for="find">Find</label>
                <input type="text" id="find">
            </div>
        </div>
        <div class="classes">

            @foreach (var item in Model.Classes)
            {
                var lessonsMon = item.Lessons.Where(l => l.DayOfWeek == "Mon").OrderBy(l => l.NumberOfLesson).ToList();
                var lessonsTue = item.Lessons.Where(l => l.DayOfWeek == "Tue").OrderBy(l => l.NumberOfLesson).ToList();
                var lessonsWed = item.Lessons.Where(l => l.DayOfWeek == "Wed").OrderBy(l => l.NumberOfLesson).ToList();
                var lessonsThu = item.Lessons.Where(l => l.DayOfWeek == "Thu").OrderBy(l => l.NumberOfLesson).ToList();
                var lessonsFri = item.Lessons.Where(l => l.DayOfWeek == "Fri").OrderBy(l => l.NumberOfLesson).ToList();
                <div>
                    <div class="class">
                        <div class="user-text left_user">
                            <h3>@item.ClassName</h3>
                        </div>
                    </div>
                    <div class="shedule_day">
                        <h2 class="up"><i>Monday</i></h2>
                        <table>
                            <tr>
                                <th>№</th>
                                <th>Subject</th>
                                <th>Classroom</th>
                                <th>Teacher</th>
                            </tr>

                            @foreach (var lesson in lessonsMon)
                            {
                                <tr>
                                    <td>@lesson.NumberOfLesson</td>
                                    <td>
                                        @lesson.Subject
                                    </td>
                                    <td>
                                        @lesson.Classroom
                                    </td>
                                    <td>
                                        @lesson.FullTeacherName
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                    <div class="shedule_day">
                        <h2 class="up"><i>Tuesday</i></h2>
                        <table>
                            <tr>
                                <th>№</th>
                                <th>Subject</th>
                                <th>Classroom</th>
                                <th>Teacher</th>
                            </tr>

                            @foreach (var lesson in lessonsTue)
                            {
                                <tr>
                                    <td>@lesson.NumberOfLesson</td>
                                    <td>
                                        @lesson.Subject
                                    </td>
                                    <td>
                                        @lesson.Classroom
                                    </td>
                                    <td>
                                        @lesson.FullTeacherName
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                    <div class="shedule_day">
                        <h2 class="up"><i>Wednesday</i></h2>
                        <table>
                            <tr>
                                <th>№</th>
                                <th>Subject</th>
                                <th>Classroom</th>
                                <th>Teacher</th>
                            </tr>

                            @foreach (var lesson in lessonsWed)
                            {
                                <tr>
                                    <td>@lesson.NumberOfLesson</td>
                                    <td>
                                        @lesson.Subject
                                    </td>
                                    <td>
                                        @lesson.Classroom
                                    </td>
                                    <td>
                                        @lesson.FullTeacherName
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                    <div class="shedule_day">
                        <h2 class="up"><i>Thursday</i></h2>
                        <table>
                            <tr>
                                <th>№</th>
                                <th>Subject</th>
                                <th>Classroom</th>
                                <th>Teacher</th>
                            </tr>

                            @foreach (var lesson in lessonsThu)
                            {
                                <tr>
                                    <td>@lesson.NumberOfLesson</td>
                                    <td>
                                        @lesson.Subject
                                    </td>
                                    <td>
                                        @lesson.Classroom
                                    </td>
                                    <td>
                                        @lesson.FullTeacherName
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                    <div class="shedule_day">
                        <h2 class="up"><i>Friday</i></h2>
                        <table>
                            <tr>
                                <th>№</th>
                                <th>Subject</th>
                                <th>Classroom</th>
                                <th>Teacher</th>
                            </tr>

                            @foreach (var lesson in lessonsFri)
                            {
                                <tr>
                                    <td>@lesson.NumberOfLesson</td>
                                    <td>
                                        @lesson.Subject
                                    </td>
                                    <td>
                                        @lesson.Classroom
                                    </td>
                                    <td>
                                        @lesson.FullTeacherName
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
                <br>
            }

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin.js"></script>
}